{
  "name": "express",
  "version": "1.0.0",
  "main": "index.js",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mjml": "^4.6.2",
    "nanoid": "^3.1.3",
    "node-mailjet": "^3.3.1",
    "pg": "^8.0.2",
    "sequelize": "^5.21.6",
    "slugify": "^1.4.0",
    "stripe": "^8.44.0",
    "winston": "^3.2.1"
  },
  "scripts": {
    "lint": "eslint ./src --ext .js",
    "dev": "nodemon src/index.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:migrate:make": "sequelize-cli migration:create",
    "db:seed": "sequelize-cli db:seed:all",
    "build:front": "rm -rf src/app-desktop && cd app && yarn build && cp -r build ../src/app-desktop"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint . --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
